<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.theradiary.ispwtheradiary.controller.graphic.PatientTaskController">
   <children>
      <fx:include source="CommonPanel.fxml" />
      <Text fill="#242038" layoutX="321.0" layoutY="140.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Task:" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Text>
      <Label fx:id="fullName" layoutX="407.0" layoutY="113.0" prefHeight="29.0" prefWidth="179.0" textFill="#242038">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TabPane fx:id="tabPane" layoutX="74.0" layoutY="159.0" prefHeight="360.0" prefWidth="727.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="task" onSelectionChanged="#handleTabSelectionChanged" text="Task">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="taskTableView" layoutX="26.0" layoutY="14.0" prefHeight="246.0" prefWidth="675.0">
                          <columns>
                            <TableColumn fx:id="taskNameColumn" prefWidth="225.0" text="Nome task" />
                            <TableColumn fx:id="taskDeadlineColumn" prefWidth="225.0" text="Scadenza" />
                              <TableColumn fx:id="taskStatusColumn" prefWidth="225.0" text="Stato" />
                          </columns>
                        </TableView>
                        <Button fx:id="modify" layoutX="233.0" layoutY="273.0" mnemonicParsing="false" onMouseClicked="#modifyTask" prefHeight="35.0" prefWidth="130.0" style="-fx-background-color: #9067C6; -fx-background-radius: 20px;" text="Modifica" textFill="WHITE">
                           <opaqueInsets>
                              <Insets top="20.0" />
                           </opaqueInsets>
                        </Button>
                        <Button fx:id="delete" layoutX="370.0" layoutY="273.0" mnemonicParsing="false" onMouseClicked="#deleteTask" prefHeight="35.0" prefWidth="130.0" style="-fx-background-color: #9067C6; -fx-background-radius: 20px;" text="Elimina" textFill="WHITE">
                           <opaqueInsets>
                              <Insets top="20.0" />
                           </opaqueInsets>
                        </Button>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="toDo" onSelectionChanged="#handleTabSelectionChanged" text="To-do list">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="toDoListView" layoutX="26.0" layoutY="14.0" prefHeight="246.0" prefWidth="675.0" />
                        <Button fx:id="modifyToDo" layoutX="233.0" layoutY="273.0" mnemonicParsing="false" onMouseClicked="#modifyToDo" prefHeight="35.0" prefWidth="130.0" style="-fx-background-color: #9067C6; -fx-background-radius: 20px;" text="Modifica" textFill="WHITE">
                           <opaqueInsets>
                              <Insets top="20.0" />
                           </opaqueInsets>
                        </Button>
                        <Button fx:id="save" layoutX="370.0" layoutY="273.0" mnemonicParsing="false" onMouseClicked="#saveToDo" prefHeight="35.0" prefWidth="130.0" style="-fx-background-color: #9067C6; -fx-background-radius: 20px;" text="Salva" textFill="WHITE">
                           <opaqueInsets>
                              <Insets top="20.0" />
                           </opaqueInsets>
                        </Button>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab fx:id="diary" onSelectionChanged="#handleTabSelectionChanged" text="Diary">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextArea fx:id="diaryTextArea" layoutX="26.0" layoutY="14.0" prefHeight="246.0" prefWidth="675.0" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button layoutX="56.0" layoutY="106.0" mnemonicParsing="false" onMouseClicked="#back" style="-fx-background-color: #9067C6; -fx-background-radius: 20px;" text="Indietro" textFill="WHITE" />
   </children>
</AnchorPane>
